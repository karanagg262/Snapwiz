<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <div class="table-data">
<h2>Display Data using Node.js & MySQL</h2>
    <table border="1">
        <tr>
            <th>S.N</th>
            <th>Email</th>
            <th>Name</th>
            <th>Linkedin</th>
        </tr>
        
        <%
        if(data.length!=0){
        var i=1;
        data.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.username %></td>
            <td><%=data.name %></td>
            <td><%=data.linkedin %></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
